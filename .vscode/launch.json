{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ 실행",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/file_renamer", 
            "args": ["${workspaceFolder}/test_folder", "사진"], 
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb", 
            "setupCommands": [
                {
                    "description": "gdb pretty-printing 활성화",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
